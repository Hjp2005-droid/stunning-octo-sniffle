<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oswestry Latest News</title>
</head>
<body>
    <h1>Latest News from Oswestry</h1>
    <div id="news-container">Loading latest headlines...</div>
    <script>
        async function fetchNews() {
            const newsContainer = document.getElementById('news-container');
            newsContainer.innerHTML = 'Loading latest headlines...';

            try {
                // Replace with your actual news API URL or RSS feed
                const response = await fetch('https://newsapi.org/v2/top-headlines?country=gb&category=general&q=Oswestry&apiKey=YOUR_API_KEY');
                const data = await response.json();

                // Loop through the data and display headlines
                data.articles.forEach(article => {
                    const headline = document.createElement('h3');
                    headline.textContent = article.title;
                    newsContainer.appendChild(headline);
                });
            } catch (error) {
                newsContainer.innerHTML = 'Failed to load news headlines.';
            }
        }

        window.onload = fetchNews;
    </script>
</body>
</html>
